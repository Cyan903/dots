#!/usr/bin/bash

# Link scripts to proper locations
#  Any file beginning with _ requires root.

scripts_dir="/home/hwk/dev/bin"

if [ "$EUID" -ne 0 ]; then
    echo "Please run as root."
    exit 1
fi

# dual-tv
ln -sf $scripts_dir/dual-tv /home/hwk/.config/screenlayout/dual-tv.sh

# resolv-pi
ln -sf $scripts_dir/_resolv-pi /usr/local/sbin/resolv-pi

# i3lock-wrapper
ln -sf $scripts_dir/i3lock-wrapper /usr/local/bin/i3lock-wrapper
